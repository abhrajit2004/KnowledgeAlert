{
  "manifest_version": 3,
  "name": "KnowledgeAlert",
  "version": "1.0",
  "description": "Opens a random Wikipedia article with a single click.",
  "permissions": [
    "tabs"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "KnowledgeAlert"
  },
  "background": {
    "service_worker": "background.js"
  }
}